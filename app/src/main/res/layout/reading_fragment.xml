<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.learn.TrainFragment">

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/default_card_corner_radius"
        android:layout_margin="8dp"
        tools:context=".ui.learn.ReadingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_word_to_learn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lessWhite"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingBottom="16dp"
                android:text="possivel"
                android:textSize="32sp"
                android:fontFamily="@font/gotham_rounded_bold"
                android:textAllCaps="true"
                android:textColor="@color/secondaryText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lessWhite"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:text="Selecione a traducao"
                android:textAllCaps="true"
                android:textColor="@color/secondaryText"/>

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/tv_option1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_option_height"
                android:background="@drawable/custom_ripple"
                android:gravity="center"
                android:padding="8dp"
                android:text="car \n carro"
                android:textColor="@color/secondaryText"
                android:textSize="16sp" />

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/tv_option2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_option_height"
                android:background="@drawable/custom_ripple"
                android:gravity="center"
                android:padding="8dp"
                android:text="Cheese \n queijo"
                android:textColor="@color/secondaryText"
                android:textSize="16sp" />

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/tv_option3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_option_height"
                android:background="@drawable/custom_ripple"
                android:gravity="center"
                android:padding="8dp"
                android:text="strong \n forte"
                android:textColor="@color/secondaryText"
                android:textSize="16sp" />

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/tv_option4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_option_height"
                android:background="@drawable/custom_ripple"
                android:gravity="center"
                android:padding="8dp"
                android:text="strong \n forte"
                android:textColor="@color/secondaryText"
                android:textSize="16sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:background="@null"
        android:id="@+id/btn_ignore_word"
        android:layout_gravity="center_horizontal"
        android:layout_margin="32dp"
        android:textSize="12sp"
        android:text="Ignorar palavra" />

</LinearLayout>
