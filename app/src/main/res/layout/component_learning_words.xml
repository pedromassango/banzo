<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="45"
            android:id="@+id/tv_learned_words"
            android:fontFamily="@font/gotham_rounded_bold"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <com.jackandphantom.circularprogressbar.CircleProgressbar
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cpb_progress="55"
            android:id="@+id/progress_days_learnig"
            app:cpb_roundedCorner="true"
            app:cpb_foregroundProgressWidth="20"
            app:cpb_backgroundProgressWidth="20"
            app:cpb_backgroundProgressColor="@color/lessWhite"
            app:cpb_foregroundProgressColor="@color/colorAccent"
            app:cpb_touchEnabled="false"/>

    </FrameLayout>


    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:fontFamily="@font/gotham_rounded_book"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_toStartOf="@id/view1"
        android:layout_toLeftOf="@id/view1"
        android:paddingLeft="16dp"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:text="Complete as tarefas para aprender as palavras"
        android:textColor="@color/secondaryText"
        android:textSize="20sp" />

</RelativeLayout>