<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_author_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cover_chat"
            tools:src="@tools:sample/avatars"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tv_comment_author"
            android:textSize="18sp"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:fontFamily="@font/gotham_rounded_bold"
            tools:text="@tools:sample/last_names"
            android:textColor="@color/secondaryText"
            android:layout_toEndOf="@id/img_author_photo"
            android:layout_toRightOf="@id/img_author_photo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:id="@+id/tv_comment_text"
            tools:text="@tools:sample/lorem/random"
            tools:maxLines="5"
            android:textColor="@color/grey"
            android:layout_below="@id/tv_comment_author"
            android:layout_toEndOf="@id/img_author_photo"
            android:layout_toRightOf="@id/img_author_photo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>